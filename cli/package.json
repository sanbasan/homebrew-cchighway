{
  "name": "cchighway",
  "version": "1.0.0",
  "description": "Claude Code Highway - A wrapper tool for Claude Code with web server interface",
  "main": "dist/cli/index.js",
  "bin": {
    "cchighway": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/cli/index.ts",
    "build": "tsc",
    "build:single": "ncc build dist/cli/index.js -o dist/bin",
    "build:release": "npm run build && npm run build:single",
    "start": "node dist/cli/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "install:global": "npm run build:release && npm link",
    "uninstall:global": "npm unlink -g"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanbasan/cchighway.git"
  },
  "keywords": [
    "claude",
    "ai",
    "cli",
    "wrapper",
    "server"
  ],
  "author": "",
  "license": "Private",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/sanbasan/cchighway/issues"
  },
  "homepage": "https://github.com/sanbasan/cchighway#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "figlet": "^1.8.1",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.6.3",
    "ora": "^8.2.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/express": "^5.0.3",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.0",
    "@types/uuid": "^10.0.0",
    "@vercel/ncc": "^0.38.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2"
  }
}
